<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gov.cipam.gi.activities.ProductDetailActivity">
    <include
        android:id="@+id/detail_activity_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/details_image"
        android:layout_width="@dimen/image_parameter_large"
        android:layout_height="@dimen/image_parameter_large"
        android:layout_below="@+id/detail_activity_toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_image"
        tools:text="@string/action_signout"
        android:id="@+id/textView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/seller_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"/>

</RelativeLayout>
